<div class="container-fluid h-100" style="margin-top: 200px">
  <div class="row justify-content-center align-items-center h-100">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-dark text-white">Iniciar Sesion</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, "Correo Electronico", class: "font-weight-bold" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Contraseña", class: "font-weight-bold" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.submit "Iniciar Sesion", class: "loginbtn separation" %>
              <%= link_to "Registarse", new_registration_path(resource_name), class: 'registrarmsg separation' %>
              <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: 'contramsg separation' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
