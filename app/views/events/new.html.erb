<div class="container">
  <%= form_with(model: @event, method: "post", class: "my-form") do |form| %>
    <div class="mb-3">
        <%= form.label :titulo, "Titulo", class: "form-label" %>
        <%= form.text_field :titulo, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
        <%= form.label :descripcion, "DescripciÃ³n", class: "form-label" %>
        <%= form.text_field :descripcion, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
        <%= form.label :fecha, "Fecha", class: "form-label" %>
        <%= form.date_field :fecha, class: "form-control", required: true %>
    </div>

    <div data-controller="map" class="mb-3">
        <%= form.label :ubicacion, "Ubicacion", class: "form-label" %>
        <div id="map" style="width: 100%; height: 300px;"></div>
        <%= form.text_field :ubicacion, class: "form-control ubicacion", placeholder: "direccion", required: true %>
        <%= form.text_field :latitud, class: "form-control latitud", placeholder: "latitud", required: true %>
        <%= form.text_field :longitud, class: "form-control longitud", placeholder: "longitud", required: true %>
    </div>  

    <div class="mb-3">
        <%= form.label :costo, class: "form-label" %>
        <%= form.number_field :costo, class: "form-control", required: true %>
    </div>

    <div class="mb-3 ml-5">
        <%= form.check_box :privado, class: "form-check-input" %>
        <%= form.label :privado, "Privado", class: "form-check-label" %>
        <%= form.label :foto, 'Imagen', class: "form-label" %>
        <%= form.file_field :foto, class: "form-control-file" %>
    </div>

    <div class="text-center">
        <%= form.submit "Guardar Evento", class: "btn btn-primary", data: { disable_with: "Creando Evento..." } %>
        <%= link_to "Regresar", events_index_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
